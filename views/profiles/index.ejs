<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/index.css">
<%- include('../partials/nav') %>

<main>
  <h1>All Profiles</h1>
  <div class="container">
    
    <% profiles.forEach(profile => { %>
      <div class="profile-pic">
        <a href="/profiles/<%= profile._id %>">
        <% if (profile.avatar) { %>
          <img src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar" width="150px" height="150px">
        <% } else { %>
          <img src="/images/icons/user.png" alt="A placeholder avatar" width="150px" height="150px" class="profile-pic">
        <% } %>
        <div><%= profile.name %></div>
        </a>
      </div>
    <% }) %>
    
  </div>
</main>

<%- include('../partials/footer') %>