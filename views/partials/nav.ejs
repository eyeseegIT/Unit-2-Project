  <nav>
    <a 
      href="/" <%- title === 'Home' ? 'class="active"' : '' %>
    >HOME</a>
    <a 
      href="/foods" <%- title === 'All Foods' ? 'class="active"' : '' %>
    >ALL FOODS</a>
